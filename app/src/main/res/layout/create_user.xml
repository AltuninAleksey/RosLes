<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="20dp"
        android:text="Заполните все поля, чтобы создать аккаунт"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/black" />


    <include
        android:id="@+id/name"
        layout="@layout/custom_input_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"

        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <include
        android:id="@+id/filial"
        layout="@layout/custom_input_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <include
        android:id="@+id/email"
        layout="@layout/custom_input_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        app:layout_constraintTop_toBottomOf="@+id/filial" />

    <include
        android:id="@+id/password"
        layout="@layout/custom_input_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>

    <include
        android:id="@+id/passwordapply"
        layout="@layout/custom_input_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        app:layout_constraintTop_toBottomOf="@+id/password"/>

    <Button
        android:id="@+id/CreateSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_weight="1"
        android:backgroundTint="@color/color_button_main"
        android:text="Создать"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textSize="16sp"
        app:cornerRadius="30dp"
        app:layout_constraintHorizontal_bias="0.499" />


    <TextView
        android:id="@+id/createuser"
        android:layout_width="wrap_content"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:text="Уже есть аккаунт? "
        android:textAlignment="center"
        android:textSize="20sp" />


</LinearLayout>
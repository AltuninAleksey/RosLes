<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <Button
        android:id="@+id/user"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:backgroundTint="@color/color_button_main"
        android:drawableLeft="@drawable/user"
        android:text="Личная карточка"
        android:textSize="10sp"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/addporod"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:backgroundTint="@color/color_button_main"
        android:drawableLeft="@drawable/leaf"
        android:text="Добавить породу"
        android:textSize="10sp"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/open"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:backgroundTint="@color/color_button_main"
        android:drawableLeft="@drawable/file"
        android:text="Открыть "
        android:textSize="10sp"

        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:backgroundTint="@color/color_button_main"
        android:drawableLeft="@drawable/edit"
        android:text="Добавить"
        android:textSize="10sp"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="100dp"

        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:backgroundTint="@color/color_button_main"
        android:drawableLeft="@drawable/minus"
        android:text="Удалить"
        android:textSize="10sp"
        app:cornerRadius="30dp" />

</LinearLayout>

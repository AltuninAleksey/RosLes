<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <ImageView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ImageView>

    <ScrollView
        android:id="@+id/scrollparrent"
        android:layout_width="match_parent"
        android:layout_height="500dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/tbl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/first_colum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/background_table">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="№ точки"
                    android:textColor="#ffff"
                    android:textSize="@dimen/custom_size_table" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Дата/Время"
                    android:textColor="#ffff"
                    android:textSize="@dimen/custom_size_table" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Изображение"
                    android:textColor="#ffff"
                    android:textSize="@dimen/custom_size_table" />
            </TableRow>

        </TableLayout>
        <!--</HorizontalScrollView>-->
    </ScrollView>

    <include
        android:id="@+id/toolbar"
        layout="@layout/menu"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
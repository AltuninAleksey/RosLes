<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainview"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_background"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollparrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:paddingBottom="210dp"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TableLayout
            android:id="@+id/tbl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/first_colum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background_table">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:padding="2dip"
                    android:gravity="center"
                    android:text="ID"
                    android:textColor="#ffff"
                    android:textSize="@dimen/custom_size_table"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"

                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="2dip"
                    android:text="Лесничество"
                    android:textColor="#ffff"
                    android:textSize="@dimen/custom_size_table" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:padding="2dip"
                    android:text="Участковое &#10;лесничество"
                    android:textColor="#ffff"
                    android:textSize="@dimen/custom_size_table" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="2dip"
                    android:text="Квартал"
                    android:textColor="#ffff"
                    android:textSize="@dimen/custom_size_table" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="2dip"
                    android:text="Выдел"
                    android:textColor="#ffff"
                    android:textSize="@dimen/custom_size_table" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="2dip"
                    android:text="Дата"
                    android:textColor="#ffff"
                    android:textSize="@dimen/custom_size_table" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:padding="2dip"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:src="@drawable/reload" />

            </TableRow>

        </TableLayout>
        <!--</HorizontalScrollView>-->
    </ScrollView>



    <include
        android:id="@+id/toolbar"
        layout="@layout/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />



</androidx.constraintlayout.widget.ConstraintLayout>
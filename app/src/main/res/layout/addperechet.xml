<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/percenttext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Перечетная ведомость участка:"
            android:textSize="@dimen/custom_size_text_medium" />

        <TextView
            android:id="@+id/percentvalue"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="TextView"
            android:gravity="center"
            android:textSize="@dimen/custom_size_text_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="-16dp">

        <TextView
            android:id="@+id/datetext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Дата пробы:"
            android:textSize="@dimen/custom_size_text_medium" />

        <EditText
            android:id="@+id/datevalue"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:hint="text"
            android:layout_height="match_parent"
            android:inputType="date"
            android:textSize="@dimen/custom_size_text_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:layout_editor_absoluteX="-16dp">

        <TextView
            android:id="@+id/Stext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Площадь пробы:"
            android:textSize="@dimen/custom_size_text_medium" />

        <EditText
            android:id="@+id/Svalue"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:hint="text"
            android:layout_height="match_parent"
            android:textSize="@dimen/custom_size_text_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        tools:layout_editor_absoluteX="-51dp">

        <TextView
            android:id="@+id/photopointtext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Фото точка:"
            android:textSize="@dimen/custom_size_text_medium" />

        <TextView
            android:id="@+id/photopointvalue"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="TextView"
            android:gravity="center"
            android:textSize="@dimen/custom_size_text_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/Usertext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Сотрудник:"
            android:textSize="@dimen/custom_size_text_medium" />

        <TextView
            android:id="@+id/uservalue"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="TextView"
            android:gravity="center"
            android:textSize="@dimen/custom_size_text_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10"
        tools:layout_editor_absoluteX="-16dp">

        <TextView
            android:id="@+id/vedomosttext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Перечетная ведомость участка:"
            android:textSize="@dimen/custom_size_text_medium" />

        <TextView
            android:id="@+id/vedomostvalue"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="TextView"
            android:gravity="center"
            android:textSize="@dimen/custom_size_text_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/vudeltext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Выдел:"
            android:textSize="@dimen/custom_size_text_medium" />

        <TextView
            android:id="@+id/vudelvalue"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="TextView"
            android:gravity="center"
            android:textSize="@dimen/custom_size_text_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
        tools:layout_editor_absoluteX="-16dp">

        <TextView
            android:id="@+id/cvartaltext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Квартал:"
            android:textSize="@dimen/custom_size_text_medium" />

        <TextView
            android:id="@+id/cvartalvalue"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="TextView"
            android:gravity="center"
            android:textSize="@dimen/custom_size_text_medium" />
    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/color_button_main"
        android:text="Внести данные"
        android:textSize="@dimen/custom_size_text"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>